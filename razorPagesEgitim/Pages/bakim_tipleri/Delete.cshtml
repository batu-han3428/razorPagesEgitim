@page
@model razorPagesEgitim.Pages.bakim_tipleri.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-light">Bakım Tipi Sil</h2>
<br />

<form method="post">
    <input type="hidden" asp-for="BakimTipi.Id" />
    <div class="border backgroundwhite">
        <div class="form-group row">
            <div class="col-2">
                <label for="ad" class="form-label">Bakım Adı:</label>
                @*<label asp-for="BakimTipi.BakimAdi"></label>*@ @*Veri tabanında ki tablonun sütun adına erişim kodu*@
            </div>
            <div class="col-5">
                <input id="ad" readonly asp-for="BakimTipi.BakimAdi" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label for="fiyat" class="form-label">Bakım Fiyatı:</label>
                @*<label asp-for="BakimTipi.BakimFiyati"></label>*@ @*Veri tabanında ki tablonun sütun adına erişim kodu*@
            </div>
            <div class="col-5">
                <input id="fiyat" readonly asp-for="BakimTipi.BakimFiyati" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_SilveGeriDonButonlari" />
            </div>
        </div>
    </div>
</form>