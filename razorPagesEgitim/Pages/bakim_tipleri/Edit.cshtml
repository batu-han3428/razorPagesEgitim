@page
@model razorPagesEgitim.Pages.bakim_tipleri.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-light">Bakım Tipi Düzenle</h2>
<br />

<form method="post">
    <div class="border backgroundwhite">
        <input type="hidden" asp-for="bakimTipi.Id"/>
        <div class="form-group row">
            <div class="col-2">
                <label for="ad" class="form-label">Bakım Adı:</label>
                @*<label asp-for="BakimTipi.BakimAdi"></label>*@ @*Veri tabanında ki tablonun sütun adına erişim kodu*@
            </div>
            <div class="col-5">
                <input id="ad" asp-for="bakimTipi.BakimAdi" class="form-control" />
            </div>
            <span asp-validation-for="bakimTipi.BakimAdi" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label for="fiyat" class="form-label">Bakım Fiyatı:</label>
                @*<label asp-for="BakimTipi.BakimFiyati"></label>*@ @*Veri tabanında ki tablonun sütun adına erişim kodu*@
            </div>
            <div class="col-5">
                <input id="fiyat" asp-for="bakimTipi.BakimFiyati" class="form-control" />
            </div>
            <span asp-validation-for="bakimTipi.BakimFiyati" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DuzenleveGeriDonButonlari" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} @*asp-validation-for ların düzgün bir şekilde çalışması için yazdık. ekrana uyarı vermek için*@