@page
@model razorPagesEgitim.Pages.bakim_tipleri.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-light">Bakım Tipi Detayları</h2>
<br />


    <div class="border backgroundwhite">
        <div class="row">
            <div class="col-2">
                <label for="ad" class="form-label">Bakım Adı:</label>
                @*<label asp-for="BakimTipi.BakimAdi"></label>*@ @*Veri tabanında ki tablonun sütun adına erişim kodu*@
            </div>
            <div class="col-5">
                <input id="ad" asp-for="BakimTipi.BakimAdi" disabled class="form-control" />
