@page
@model razorPagesEgitim.Pages.Kullanicilar.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-light">Kullanıcı Sil</h2>
<br />

<form method="post">
    <div class="border backgroundwhite">  
        <input type="hidden" asp-for="applicationUser.Id" />
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="applicationUser.adSoyad" class="form-label text-info"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="applicationUser.adSoyad" readonly class="form-control" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="applicationUser.Email" class="form-label text-info"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="applicationUser.Email" readonly class="form-control" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="applicationUser.PhoneNumber" class="form-label text-info"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="applicationUser.PhoneNumber" readonly class="form-control" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="applicationUser.adres" class="form-label text-info"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="applicationUser.adres" readonly class="form-control" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="applicationUser.sehir" class="form-label text-info"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="applicationUser.sehir" readonly class="form-control" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="applicationUser.postaKodu" class="form-label text-info"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="applicationUser.postaKodu" readonly class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_SilveGeriDonButonlari" />
            </div>
        </div>
    </div>
</form>