@page
@model razorPagesEgitim.Pages.Kullanicilar.IndexModel
@{
    ViewData["Title"] = "Referanslar";
}

<form method="get" asp-page="Index">
    <br />
    <br />
    <div class="border backgroundwhite">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Referanslar</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info"><i class="bi bi-plus-lg" style="color:white;"></i>&nbsp; Yeni Referans Oluştur</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-11">
                <div class="row" style="padding:10px 0;">
                    <div class="col-4">
                        @Html.Editor("aramaAdSoyad", new { htmlAttributes = new { @class = "form-control", placeholder = "Ad Soyad.." } })
                    </div> 
                    <div class="col-4">
                        @Html.Editor("aramaTelefon", new { htmlAttributes = new { @class = "form-control", placeholder = "Telefon.." } })
                    </div>
                    <div class="col-4">
                        @Html.Editor("aramaEmail", new { htmlAttributes = new { @class = "form-control", placeholder = "Email.." } })
                    </div>

                </div>
            </div>
            <div class="col-md-1">
                <div class="row" style="padding:10px 15px 10px 0;">
                    <button type="submit" value="ara" name="submit" class="btn btn-info form-control"><i class="bi bi-search" style="color:white;"></i></button>
                </div>

             </div>
                <div class="col-12 table-responsive">
                    <table class="table table-striped border">
                        <tr class="table-secondary">
                            <th>
                                @Html.DisplayNameFor(a => a.UsersListViewModel.ApplicationUserList[0].adSoyad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(a => a.UsersListViewModel.ApplicationUserList[0].PhoneNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(a => a.UsersListViewModel.ApplicationUserList[0].Email)
                            </th>
                            <th></th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model.UsersListViewModel.ApplicationUserList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => item.adSoyad)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.PhoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Email)
                                </td>
                                <td>
                                    <a asp-page="../Makinalar/Index" asp-route-KullaniciId="@item.Id" style="text-decoration:none;">
                                        <img src="~/images/cncMachine.png" width="40"/>&nbsp; Makinaları Göster
                                    </a>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-warning text-white" asp-page="Edit" asp-route-id="@item.Id"><i class="bi bi-pen-fill" style="color:white"></i></a>
                                        <a class="btn btn-danger text-white" asp-page="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill" style="color:white"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                        <tr>
                            <td colspan="5" class="text-right">
                                <div page-model="@Model.UsersListViewModel.PagingInfo" asp-action="Index"
                                     page-class="btn border" page-class-normal="btn btn-light" page-class-selected="btn btn-info active" class="btn-group">
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
    </div>
</form>