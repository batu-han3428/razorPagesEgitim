@page
@model razorPagesEgitim.Pages.Makinalar.EditModel
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-light">Makine Bilgisi Güncelle</h2>
<br />

<form method="post">
    <div class="border backgroundwhite">
        <input type="hidden" asp-for="Makina.KullaniciId" />
        <input type="hidden" asp-for="Makina.Id" />
        <div asp-validation-summary="ModelOnly" class="text-light bg-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Makina.SN"></label>
            </div>
            <div class="col-5">
                <input asp-for="Makina.SN" class="form-control" />
            </div>
            <span asp-validation-for="Makina.SN" class="text-light bg-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Makina.Marka"></label>
            </div>
            <div class="col-5">
                <input asp-for="Makina.Marka" class="form-control" />
            </div>
            <span asp-validation-for="Makina.Marka" class="text-light bg-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Makina.Model"></label>
            </div>
            <div class="col-5">
                <input asp-for="Makina.Model" class="form-control" />
            </div>
            <span asp-validation-for="Makina.Model" class="text-light bg-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Makina.MakinaTipi"></label>
            </div>
            <div class="col-5">
                <input asp-for="Makina.MakinaTipi" class="form-control" />
            </div>
            <span asp-validation-for="Makina.MakinaTipi" class="text-light bg-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Makina.Yil"></label>
            </div>
            <div class="col-5">
                <input asp-for="Makina.Yil" class="form-control" />
            </div>
            <span asp-validation-for="Makina.Yil" class="text-light bg-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Makina.MakinaSaatSayac"></label>
            </div>
            <div class="col-5">
                <input asp-for="Makina.MakinaSaatSayac" class="form-control" />
            </div>
            <span asp-validation-for="Makina.MakinaSaatSayac" class="text-light bg-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Makina.EkAciklama"></label>
            </div>
            <div class="col-5">
                <input asp-for="Makina.EkAciklama" class="form-control" />
            </div>
            <span asp-validation-for="Makina.EkAciklama" class="text-light bg-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
               <div class="row">
                   <div class="col-6">
                       <input type="submit" class="btn btn-info form-control" value="Güncelle" style="font-size:100%;"/>
                   </div>
                   <div class="col-6">
                       <a asp-page="Index" asp-route-kullaniciId="@Model.Makina.KullaniciId" class="btn btn-success form-control">Geri</a>
                   </div>
               </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}